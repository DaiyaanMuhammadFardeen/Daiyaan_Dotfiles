{
    "languageserver": {
        "ccls": {
            "command": "ccls",
            "filetypes": ["c", "cc", "cpp", "c++", "objc", "objcpp"],
            "rootPatterns": [
                ".ccls",
                "compile_commands.json",
                ".vim/",
                ".git/",
                ".hg/"
            ],
            "initializationOptions": {
                "cache": {
                    "directory": "/tmp/ccls"
                }
            }
        }
    },
    "highlight.enable": true,
    "highlight.groups": {
        "cocHighlightSemantic": {
            "guifg": "NONE",
            "guibg": "NONE",
            "guisp": "NONE",
            "gui": "underline",
            "ctermfg": "NONE",
            "ctermbg": "NONE",
            "cterm": "underline"
        }
    }
    {
        "semanticTokens.enable": true,
        "semanticTokens.filetypes": ["c", "cpp", "h", "hpp"], // Adjust file types as needed
        "clangd.semanticHighlighting": true
    }
}
